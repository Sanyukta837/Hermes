<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_box_rounded"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_2sdp"
    >

    <include layout="@layout/profile_picture_view"
        android:layout_height="@dimen/_52sdp"
        android:layout_width="@dimen/_52sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/username_recent_rr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="User"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/last_message_time_recent_rr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp"
                tools:text="time"

            />

        </RelativeLayout>

        <TextView
            android:id="@+id/last_message_recent_rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="text message"

            />
    </LinearLayout>

</LinearLayout>